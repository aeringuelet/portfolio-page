---
import Button from '@components/Button.astro';
---

<div class='flex flex-col w-full gap-4 min-h-screen pt-28 bg-base-300'>
    <div class='avatar avatar-placeholder justify-center'>
        <div class='bg-accent/80 text-accent-content w-32 rounded-full'>
            <span class='text-3xl'>AER</span>
        </div>
    </div>

    <div class='flex text-center justify-center'>
        <div class='max-w-md'>
            <div class='badge badge-primary badge-soft badge-lg mb-4'>
                Fullstack Software Developer
            </div>
            <h1 class='text-5xl font-bold'>Building Digital Experiences</h1>
            <p class='py-6'>
                7+ years crafting scalable solutions with React, ChakraUI,
                TypeScript, and Python
            </p>
            <Button class='btn-soft btn-primary' type='link' href='#experience'
                >View My Work</Button
            >
            <Button class='btn-soft btn-secondary' type='link' href='#contact'
                >Get In Touch</Button
            >
        </div>
    </div>
</div>
