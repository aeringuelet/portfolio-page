---
interface Props {
    sectionName: string;
    title?: string;
    class?: string;
}

const { sectionName, class: className, title, ...rest } = Astro.props;
---

<section class={`${className} px-48 py-16`} id={sectionName} {...rest}>
    {
        title && (
            <div class='flex flex-col w-full items-center mb-8'>
                <h1 class='text-6xl'>{title}</h1>
                <div class='divider divider-vertical divider-primary w-18 self-center my-1 before:h-1 after:h-1' />
            </div>
        )
    }
    <slot />
</section>
